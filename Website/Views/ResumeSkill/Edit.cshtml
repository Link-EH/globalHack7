@model IList<Website.Models.SkillCategory>
@{
    ViewBag.Title = "Resume Skills";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Edit", "ResumeSkill", FormMethod.Post))
{
    for(int i = 0; i < Model.Count; ++i)
    {
    <div class="card col-2" style="display: inline-flex;">
       <label for="Skill@(i)">
        <div class="card-header">
            @if (!string.IsNullOrWhiteSpace(Model[i].Image))
            {
                
                    <img src="~/Content/SkillImages/@Model[i].Image" height="70" width="70" />
            }
        </div>
        <div class="card-body">
            <input type="checkbox" name="Skill@(i)" /> @Model[i].SkillCategoryName
        </div>
       </label>
    </div>
    }
}


